{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "outDir": "../../server/"
  },
  "exclude": [
    "node_modules",
    "public",
    "src/client"
  ]
}