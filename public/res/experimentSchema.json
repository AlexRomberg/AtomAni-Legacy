{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "charts",
        "atoms",
        "walls",
        "controls",
        "$schema"
    ],
    "properties": {
        "charts": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "id",
                    "title",
                    "fillColor",
                    "lineColor"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "enum": [
                            "fps",
                            "avgVel",
                            "pres"
                        ]
                    },
                    "title": {
                        "type": "string",
                        "pattern": "^.+$"
                    },
                    "fillColor": {
                        "type": "string",
                        "examples": [
                            "rgba(170,0,0,0.4)"
                        ],
                        "pattern": "^rgba\\((1?[0-9]{1,2}|2[0-4][0-9]|25[0-5]), ?(1?[0-9]{1,2}|2[0-4][0-9]|25[0-5]), ?(1?[0-9]{1,2}|2[0-4][0-9]|25[0-5]), ?[0-1](\\.[0-9])?\\)$"
                    },
                    "lineColor": {
                        "type": "string",
                        "examples": [
                            "rgba(200,0,0,1)"
                        ],
                        "pattern": "^rgba\\((1?[0-9]{1,2}|2[0-4][0-9]|25[0-5]), ?(1?[0-9]{1,2}|2[0-4][0-9]|25[0-5]), ?(1?[0-9]{1,2}|2[0-4][0-9]|25[0-5]), ?[0-1](\\.[0-9])?\\)$"
                    }
                }
            }
        },
        "atoms": {
            "type": "array",
            "items": {
                "type": "object",
                "oneOf": [{
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "type",
                            "x",
                            "y",
                            "z",
                            "atomType"
                        ],
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "single"
                                ]
                            },
                            "x": {
                                "type": "integer"
                            },
                            "y": {
                                "type": "integer"
                            },
                            "z": {
                                "type": "integer"
                            },
                            "atomType": {
                                "type": "string",
                                "enum": [
                                    "ne",
                                    "ar",
                                    "kr"
                                ]
                            }
                        }
                    },
                    {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "type",
                            "x",
                            "y",
                            "z",
                            "width",
                            "height",
                            "depth",
                            "atomType"
                        ],
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "grid"
                                ]
                            },
                            "x": {
                                "type": "integer"
                            },
                            "y": {
                                "type": "integer"
                            },
                            "z": {
                                "type": "integer"
                            },
                            "width": {
                                "type": "integer",
                                "minimum": 1,
                                "maximum": 100
                            },
                            "height": {
                                "type": "integer",
                                "minimum": 1,
                                "maximum": 100
                            },
                            "depth": {
                                "type": "integer",
                                "minimum": 1,
                                "maximum": 100
                            },
                            "atomType": {
                                "type": "string",
                                "enum": [
                                    "ne",
                                    "ar",
                                    "kr"
                                ]
                            }
                        }
                    }
                ]
            }
        },
        "walls": {
            "type": "array",
            "items": {
                "type": "object",
                "oneOf": [{
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "style",
                            "position",
                            "direction",
                            "type"
                        ],
                        "properties": {
                            "style": {
                                "type": "string",
                                "enum": [
                                    "wall"
                                ]
                            },
                            "position": {
                                "type": "integer"
                            },
                            "direction": {
                                "type": "string",
                                "enum": [
                                    "x",
                                    "y",
                                    "z"
                                ]
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "rebound",
                                    "force-LJ"
                                ]
                            }
                        }
                    },
                    {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "style",
                            "x",
                            "y",
                            "z",
                            "width",
                            "height",
                            "depth",
                            "type"
                        ],
                        "properties": {
                            "style": {
                                "type": "string",
                                "enum": [
                                    "box"
                                ]
                            },
                            "x": {
                                "type": "integer"
                            },
                            "y": {
                                "type": "integer"
                            },
                            "z": {
                                "type": "integer"
                            },
                            "width": {
                                "type": "integer",
                                "minimum": 1
                            },
                            "height": {
                                "type": "integer",
                                "minimum": 1
                            },
                            "depth": {
                                "type": "integer",
                                "minimum": 1
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "rebound",
                                    "force-LJ"
                                ]
                            }
                        }
                    },
                    {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "style",
                            "x",
                            "y",
                            "z",
                            "width",
                            "height",
                            "depth"
                        ],
                        "properties": {
                            "style": {
                                "type": "string",
                                "enum": [
                                    "visual"
                                ]
                            },
                            "x": {
                                "type": "integer"
                            },
                            "y": {
                                "type": "integer"
                            },
                            "z": {
                                "type": "integer"
                            },
                            "width": {
                                "type": "integer",
                                "minimum": 1
                            },
                            "height": {
                                "type": "integer",
                                "minimum": 1
                            },
                            "depth": {
                                "type": "integer",
                                "minimum": 1
                            }
                        }
                    }
                ]
            }
        },
        "controls": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "enum": [
                            "temp",
                            "control"
                        ]
                    },
                    "name": {
                        "type": "string",
                        "pattern": "^.+$"
                    }
                }
            }
        },
        "$schema": {
            "type": "string",
            "enum": [
                "https://raw.githubusercontent.com/AlexRomberg/AtomAni/master/src/res/experimentSchema.json",
                "../experimentSchema.json"
            ]
        }
    }
}